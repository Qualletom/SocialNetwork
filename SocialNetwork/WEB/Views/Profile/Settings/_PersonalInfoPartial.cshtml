@model WEB.Models.Profile.ProfileModel

<div class="container__settingsInfo">
    <div class="settings__header">
        <span>Персональная информация</span>
    </div>

    @using (Html.BeginForm("Action", "Controller", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="settingsInfo__body">
            <div class="settingsInfo__fields">
                <div>
                    <label>Имя</label>
                    <br />
                    @Html.TextBoxFor(model => model.FirstName, new { placeholder = Html.DisplayNameFor(model => model.FirstName) })
                    <input type="text" placeholder="Имя" />
                </div>
            </div>

            <div class="settingsInfo__fields">
                <label>Фамилия</label>
                <br />
                <input type="text" placeholder="Фамилия" />
            </div>

            <div class="settingsInfo__fields">
                <label>E-mail</label>
                <br />
                <input type="text" placeholder="E-mail" />
            </div>

            <div class="settingsInfo__fields">
                <label>Телефон</label>
                <br />
                <input type="text" placeholder="Телефон" />
            </div>

            <div class="settingsInfo__fields">
                <label>Дата рождения</label>
                <br />
                <input type="text" id="datepicker" readonly placeholder="Дата рождения" />
            </div>
        </div>

        <input class="settingsInfo__buttonCancel" type="submit" value="Отмена" />
        <input class="settingsInfo__buttonSave" type="submit" value="Сохранить изменения" />
    }


</div>
